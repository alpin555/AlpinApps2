<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PILIH PENDAFTARAN"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selection"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:id="@+id/input_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/nama2"
            android:layout_below="@+id/spinner"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Nama"/>
        <TextView
            android:id="@+id/ttd1"
            android:layout_toRightOf="@+id/nama2"
            android:layout_below="@+id/spinner"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:text=" : "/>

        <TextView
            android:id="@+id/nama_input"
            android:layout_below="@+id/spinner"
            android:layout_toRightOf="@+id/ttd1"
            android:layout_width="250dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/nama3"
            android:layout_below="@+id/nama2"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Jenis Kelamin"/>

        <TextView
            android:id="@+id/ttd2"
            android:layout_toRightOf="@+id/nama3"
            android:layout_below="@+id/ttd1"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:text=" : "/>

        <TextView
            android:id="@+id/jk_input"
            android:layout_below="@+id/nama_input"
            android:layout_toRightOf="@+id/ttd2"
            android:layout_width="250dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/nama4"
            android:layout_below="@+id/nama3"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Alamat"/>
        <TextView
            android:id="@+id/ttd3"
            android:layout_toRightOf="@+id/nama3"
            android:layout_below="@+id/ttd2"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:text=" : "/>

        <TextView
            android:id="@+id/alamat_input"
            android:layout_below="@+id/jk_input"
            android:layout_toRightOf="@+id/ttd3"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>